# Matplotlib style for scientific plotting
# This is the base style for "SciencePlots"
# see: https://github.com/garrettj403/SciencePlots

# for MNRAS specific parameters, see: https://walmsley.dev/posts/typesetting-mnras-figures

# Set color cycle: blue, green, yellow, red, violet, gray
axes.prop_cycle : cycler('color', ['0C5DA5', '00B945', 'FF9500', 'FF2C00', '845B97', '474747', '9e9e9e'])

# Set default figure size
figure.figsize : 3.3, 2.3
figure.dpi : 200
figure.subplot.hspace: 0.0
figure.subplot.wspace: 0.0

# Font sizes
font.size : 8
axes.labelsize : 8
xtick.labelsize : 8
ytick.labelsize : 8

# Set x axis
xtick.direction : in
xtick.major.size : 2.5
xtick.major.width : 0.5
xtick.minor.size : 1.0
xtick.minor.width : 0.5
xtick.minor.visible : True
xtick.top : True

# Set y axis
ytick.direction : in
ytick.major.size : 2.5
ytick.major.width : 0.5
ytick.minor.size : 1.
ytick.minor.width : 0.5
ytick.minor.visible : True
ytick.right : True

# Set ratio and line widths
# Always plot ticks on top of data
axes.axisbelow : False
axes.linewidth : 0.5
grid.linewidth : 0.5
lines.linewidth : 1.0

boxplot.boxprops.linewidth: 0.6
boxplot.whiskerprops.linewidth: 0.6
boxplot.flierprops.linewidth: 0.6
boxplot.medianprops.linewidth: 1
boxplot.meanprops.linewidth: 1

# Remove legend frame
legend.frameon : False

# Always save as 'tight'
savefig.bbox : tight
savefig.pad_inches : 0.05

# Scatter plot specific
scatter.marker : .
lines.markersize : 2

# Use serif fonts 
font.family : serif
font.serif : Times
mathtext.fontset : custom
mathtext.rm : Times

# Use LaTeX for math formatting
text.usetex : False
text.latex.preamble : \usepackage{amsmath} \usepackage{amssymb}

# saving
savefig.format : pdf
savefig.transparent : True
savefig.dpi : 100

